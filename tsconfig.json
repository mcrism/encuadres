{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "compilerOptions": {
    "types": ["vuex"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "noImplicitThis": false,
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ],
  "files": [
    "./src/shims-vue.d.ts"
  ]
  
}
